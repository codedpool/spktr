{
  "productName": "Spktr",
  "version": "0.1.0",
  "identifier": "com.spktr.app",
  "build": {
    "frontendDist": "../app/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd app && npm run dev",
    "beforeBuildCommand": "cd app && npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "overlay",
        "title": "Spktr",
        "width": 480,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
